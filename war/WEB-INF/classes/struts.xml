<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	
	<constant name="struts.action.extension" value=""/> 
	<constant name="struts.devMode" value="true" />
	
	<package name="user" namespace="/user" extends="struts-default">

		<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
			
		<interceptors>
			<interceptor name="logger" class="com.davlanca.pathfinder.interceptor.LoggingInterceptor"/>
			<interceptor name="username-validator" class="com.davlanca.pathfinder.interceptor.UserNameValidatorInterceptor"/>
			
			<interceptor-stack name="pathfinder-default">
				<interceptor-ref name="logger" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>
		</interceptors>
		
		<default-interceptor-ref name="pathfinder-default"/>
   	
		<action name="login">
			<result type="tiles">/login.tiles</result>
		</action>
		<action name="welcome" class="com.davlanca.pathfinder.action.WelcomeUserAction">
			<result name="success" type="tiles">/welcome_user.tiles</result>
			<result name="input" type="tiles">/login.tiles</result>
		</action>
		<action name="addUser" method="add" class="com.davlanca.pathfinder.action.WelcomeUserAction">
			<interceptor-ref name="username-validator" />
			<interceptor-ref name="pathfinder-default" />
			<result name="success" type="tiles">/welcome_user.tiles</result>
			<result name="input" type="tiles">/login.tiles</result>
		</action>
		<action name="updateUser" method="update" class="com.davlanca.pathfinder.action.WelcomeUserAction">
			<result name="success" type="tiles">/welcome_user.tiles</result>
			<result name="input" type="tiles">/login.tiles</result>
		</action>
		<action name="deleteUser" method="delete" class="com.davlanca.pathfinder.action.WelcomeUserAction">
			<result name="success" type="tiles">/welcome_user.tiles</result>
			<result name="input" type="tiles">/login.tiles</result>
		</action>
		
	</package>

	<package name="forum" namespace="/forum" extends="struts-default">
		<action name="welcome">
			<result>welcome.jsp</result>
		</action>
	</package>

	<package name="forumSecure" namespace="/forum/secure" extends="struts-default">
		<action name="welcome">
			<result>welcome.jsp</result>
		</action>
	</package>

</struts>